#include <iostream>
#include <cstdlib>
#include <stdlib.h>
#include <stdio.h>
using namespace std;
int main(int argc, char*argu[])
{
int Escolha;
while(true){
cout<<"Menu:\n 1->Vermelho\n 2->Azul\n 3->Verde\n 4->Sair\n\nEscolha uma opção:";
cin>>Escolha;
switch (Escolha){
case 1:
cout<<"\nO usuário escolheu Vermelho\n\n";
break;
case 2:
cout<<"\nO usuário escolheu Azul\n\n";
break;
case 3:
cout<<"\nO usuário escolheu Verde\n\n";
break;
case 4:
exit(0);
break;
}
}
return 0;
}
