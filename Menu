#include <iostream>
#include <cstdlib>
#include <stdlib.h>
#include <stdio.h>
using namespace std;
int main(int argc, char*argu[])
{
int Escolha;
while(true){
cout<<"Menu:\n 1->Vermelho\n 2->Azul\n 3->Verde\n 4->Sair\n\nEscolha uma opção:";
cin>>Escolha;
switch (Escolha){
case 1:
cout<<"O usuário escolheu Vermelho\n";
break;
case 2:
cout<<"O usuário escolheu Azul\n";
break;
case 3:
cout<<"O usuário escolheu Verde\n";
break;
case 4:
exit(0);
break;
}

}

return 0;
}
