#include <iostream>
#include <stdio.h>

using namespace std;
int main ()
{
int i,j;
int A[3][3] = {{1,4,7},{2,5,8},{3,6,9}};
int B[3][3] = {{2,6,8},{3,5,9},{1,2,3}};

cout<<"A=\n\n";
for(i=0;i<=2;i++){
    for(j=0;j<=2;j++){
	cout<<A[i][j]<<" ";
	}
   cout<<"\n";
}
cout<<"\nB=\n\n";
for(i=0;i<=2;i++){
    for(j=0;j<=2;j++){
	cout<<B[i][j]<<" ";
	}
   cout<<"\n";
}
cout<<"\n\nTransposta de A=\n\n";
for(i=0;i<=2;i++){
    for(j=0;j<=2;j++){
	cout<<A[j][i]<<" ";
	}
   cout<<"\n";
}
cout<<"\n\nTransposta de B=\n\n";
for(i=0;i<=2;i++){
    for(j=0;j<=2;j++){
	cout<<B[j][i]<<" ";
	}
   cout<<"\n";
}
cout<<"\n\nA+B\n\n";
for(i=0;i<=2;i++){
    for(j=0;j<=2;j++){
	cout<<A[i][j]+B[i][j]<<" ";
	}
   cout<<"\n";
}
cout<<"\n\nTransposta de A mais Transposta de B=\n\n";
for(i=0;i<=2;i++){
    for(j=0;j<=2;j++){
	cout<<A[j][i]+B[j][i]<<" ";
	}
   cout<<"\n";
}

return 0;
}
